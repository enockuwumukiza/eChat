{
  "name": "chatapp",
  "version": "1.0.0",
  "description": "This is the real-time chat application built using the MERN stack with TypeScript",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently \"tsc --watch\" \"nodemon\"",
    "start": "node backend/dist/index.js",
    "build": "tsc && npm install --prefix frontend/eChat && npm run build --prefix frontend/eChat && mkdir -p backend/dist/client && mv frontend/eChat/dist/* backend/dist/client",
    "postinstall": "tsc"
  },
  "keywords": [
    "socket",
    "messages"
  ],
  "author": "Enock Uwumukiza",
  "license": "MIT",
  "dependencies": {
    "@types/cookie-parser": "^1.4.7",
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.5.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "datauri": "^4.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-async-handler": "^1.2.0",
    "joi": "^17.13.3",
    "joi-password-complexity": "^5.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.8.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.16",
    "socket.io": "^4.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jquery": "^3.5.32",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/mongoose": "^5.11.96",
    "@types/multer": "^1.4.12",
    "@types/nodemailer": "^6.4.17",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.7"
  }
}
